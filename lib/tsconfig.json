{
  "extends": "astro/tsconfigs/base",
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.astro", "types/**/*.d.ts"],
  "exclude": ["node_modules/*", "./vite*.ts", "dist"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "Bundler"
  }
}
