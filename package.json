{
  "name": "@flyo/nitro-astro-workspace",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "./lib",
    "./playground"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=lib",
    "build": "npm run build --workspace=lib",
    "playground": "npm run dev --workspace=playground",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint-plugin-astro": "^0.34.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^8.57.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.18.0"
  },
  "lint-staged": {
    "*.{astro,js,css}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-astro"
    ],
    "overrides": [
      {
        "files": "**/*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
